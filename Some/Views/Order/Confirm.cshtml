@model List<CourseProject.Models.DataModels.Order>
@{
}


<table class="table table-success table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">UserName</th>
            <th scope="col">Address</th>
            <th scope="col">Amount</th>
            <th scope="col">Manage</th>
        </tr>
    </thead>

    <tbody>
    @for (var i = 0; i < Model.Count(); i++)
    {
        <tr>
            <th scope="row">@(i + 1)</th>
            <td>@(Model[i].User.Name)</td>
            <td>@Model[i].Address_</td>
            <td>@Model[i].Products.Sum(p =>(decimal) p.Quantity * p.Price)</td>
            <td><a class="btn btn-outline-warning" asp-controller="Order" asp-action="Confirm" asp-route-id="@Model[i].Id"></a></td>
        </tr>
    }
    </tbody>
</table>
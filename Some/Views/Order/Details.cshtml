@using CourseProject.Data
@model CourseProject.Models.ViewModels.OrderViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <p>@Html.DisplayFor(model => model.Order.Date)</p>
    <h3>Delivery</h3>
    <p>@Html.DisplayFor(model => model.Delivery.Date)</p>
    <p>@Html.DisplayFor(model => model.Delivery.Address)</p>
    <p>@Html.DisplayFor(model => model.Delivery.DeliveryProvider.Name)</p>
    <p>@Html.DisplayFor(model => model.Delivery.DeliveryType.Name)</p>
    <table class ="table table-info">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Quantity</th>
            <th scope="col">Amount</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Order.Products)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.CurrPrice)</td>
            <td>@Html.DisplayFor(modelItem => item.Quantity_)</td>
            <td> @(item.CurrPrice * item.Quantity_)</td>
    @if (User.IsInRole(RoleConst.Admin) && Model.Order.Status.Name == "unconfirmed")
    {
        <td><a class="btn btn-info">Edit</a></td>
    }
        </tr>
    }
    </tbody>
    </table>
</div>



@using CourseProject.Models.DataModels
@using Microsoft.AspNetCore.Identity
@using CourseProject.Data
@{
}
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


<div class="container">
    <div class="container">
        <a asp-action="Index" asp-controller="Order"
           asp-route-id="@UserManager.GetUserId(User)" class="btn btn-check">
            Orders
        </a>
    </div>

    <div class="container">
        @if (User.IsInRole(Const.Admin))
        {
            <div>
                <a class="btn btn-primary" asp-controller="Item" asp-action="Create">Додати послугу</a>
            </div>
            <div>
                <a class="btn btn-outline-danger" asp-action="ConfirmIndex" asp-controller="Order">All Orders</a>
            </div>
            <div>
                <a class="btn btn-outline-danger" asp-controller="Order" asp-action="ConfirmIndex">Confirm</a>
            </div>
            <div>
                <a class="btn btn-outline-danger" asp-controller="Category" asp-action="Create">Add Category</a>
            </div>
        }
    </div>
</div>


<script>
    var triggerTabList = [].slice.call(document.querySelectorAll('#myTab a'));
    triggerTabList.forEach(function(triggerEl) {
        var tabTrigger = new bootstrap.Tab(triggerEl);

        triggerEl.addEventListener('click',
            function(event) {
                event.preventDefault();
                tabTrigger.show();
            })
    })
</script>
@model CourseProject.Models.ViewModels.UserRegisterViewModel

@{
    ViewData["Title"] = "Register";
}
<div class="row">

    <div class="column ui center aligned basic segment">
        <h2 class="ui header">Регістрація</h2>
        <form class="ui form" asp-action="Login" asp-controller="User">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="field">
                <label asp-for="UserName"></label>
                <div class="ui left icon input">
                    <input asp-for="UserName" />
                    <i class="user icon"></i>
                </div>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="field">
                <label asp-for="Name"></label>
                <input asp-for="Name" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="field">
                <label asp-for="SurName"></label>
                <input asp-for="SurName" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="field">
                <label asp-for="PhoneNum"></label>
                <input asp-for="PhoneNum" />
                <span asp-validation-for="PhoneNum" class="text-danger"></span>
            </div>
            <div class="field">
                <label asp-for="Password"></label>
                <div class="ui left icon input">
                    <input asp-for="Password" />
                    <i class="lock icon"></i>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <input class="ui blue submit button" type="submit" value="Регістрація"/>
        </form>
        <div class="ui horizontal divider">
            Маєте акаунт?
        </div>
        <div class="center aligned column">
            <div class="ui big button">
                <i class="user icon"></i>
                <a asp-action="Login">Увійдіть</a>
            </div>
        </div>

    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
@model CourseProject.Models.ViewModels.UserLoginViewModel

@{
    ViewData["Title"] = "View";
}


<div class="row">

    <div class="column ui center aligned basic segment">
        <form class="ui form" asp-action="Login" asp-controller="User">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="field">
                <label asp-for="UserName"></label>
                <div class="ui left icon input">
                    <input asp-for="UserName"/>
                    <i class="user icon"></i>
                </div>
                <span class="ui pointing red basic label" asp-validation-for="UserName"></span>
            </div>
            <div class="field">
                <label asp-for="Password"></label>
                <div class="ui left icon input">
                    <input asp-for="Password"/>
                    <i class="lock icon"></i>
                </div>
                <span class="ui pointing red basic label" asp-validation-for="Password"></span>
            </div>
            <input class="ui blue submit button" type="submit" value="Вхід"/>
            <div class="ui blue submit button">Вхід</div>
        </form>
        <div class="ui horizontal divider">
            Або
        </div>
        <div class="center aligned column">
            <div class="ui big button">
                <i class="signup icon"></i>
                <a asp-action="Register">Регістрація</a>
            </div>
        </div>

    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
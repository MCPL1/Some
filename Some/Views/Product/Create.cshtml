@using CourseProject.Models.DataModels
@model CourseProject.Models.ViewModels.ProductCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center mt-5">Create product</h1>

<div class="row">
    <div class="col-md-4 m-auto">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.Quantity" class="control-label"></label>
                <input asp-for="Product.Quantity" class="form-control" />
                <span asp-validation-for="Product.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select class="form-select" style="width: 100%" asp-for="Product.Category.Id"
                        asp-items="@(new SelectList(Model.Categories, "Id", "Name"))">
                    <option>Please select one</option>
                </select>
            </div>
            <div class="form-group">
                <select class="form-select" style="width: 100%" asp-for="Product.Manufacturer.Id"
                        asp-items="@(new SelectList(Model.Manufacturers, "Id", "Name"))">
                    <option>Please select one</option>
                </select>
           
            </div>
            <div class="form-group">
                <button type="submit" style="width: 100%;" class="btn btn-success">Create</button>
            </div>
        </form>
    </div>
</div>

<div class="text-center">
    <a asp-action="Index">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

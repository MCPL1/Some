@model CourseProject.Models.ViewModels.CategoryViewModel


<li class="treeview-animated-items">
    <div class="treeview-animated-items-header">
        <i class="fas fa-plus-circle"></i>
        <div>
            <i class="far fa-envelope-open ic-w mx-1"></i>@Model.Name
        </div>
        <div>
           
        </div>
    </div>

    @if (Model.SubCategories != null && Model.SubCategories.Any())
    {
        <ul class="nested">
            @foreach (var category in Model.SubCategories)
            {
                @if (category.SubCategories != null && category.SubCategories.Any())
                {
                    <li>
                        @await Html.PartialAsync("CategoryTreePartial", category)
                    </li>
                }
                else
                {
                    <li>
                        <div class="treeview-animated-element">
                            <i class="far fa-address-book ic-w mr-1"></i>@category.Name
                        </div>
                    </li>
                }
            }
        </ul>
    }
</li>